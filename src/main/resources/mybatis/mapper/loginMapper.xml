<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.system.mapper.loginMapper">
    <resultMap id="LoginUser" type="com.system.pojo.LoginUser">
        <result column="user_id" jdbcType="INTEGER" property="user_id" />
        <result column="login_id" jdbcType="VARCHAR" property="login_id"/>
        <result column="display_name" jdbcType="VARCHAR" property="display_name"/>
        <result column="pwd" jdbcType="VARCHAR" property="pwd"/>
        <result column="enabled" jdbcType="TINYINT" property="enabled"/>
    </resultMap>

    <select id="loginUser"  parameterType="LoginUser" resultType="LoginUser">
        SELECT * FROM login WHERE login_id = #{login_id} and pwd = #{pwd}
    </select>

    <select id="selectUser" resultType="LoginUser" parameterType="LoginUser">
        select * from login where login_id = #{login_id}
    </select>

    <insert id="addUser" parameterType="LoginUser">
        insert into login value (null,#{login_id},#{display_name},#{pwd},1)
    </insert>

    <update id="updateUser" parameterType="LoginUser">
        update login set user_id=#{user_id}, login_id=#{login_id}, display_name=#{display_name}, pwd=#{pwd}, enabled=#{enabled} where user_id=#{user_id}
    </update>

    <select id="findAllUser" resultType="LoginUser">
        SELECT * FROM login
    </select>

</mapper>
